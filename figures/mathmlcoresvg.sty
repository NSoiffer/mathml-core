\usepackage{tikz}
\usepackage{amsmath}

\newcommand{\MathMLBox}[5]{
  \begin{scope}[shift={(#1,#2)},xscale=#3,yscale=#4,color=#5]
    \fill[color=#5!10]
         (0,-1.5) -- (5,-1.5) -- (5,1.5) -- (0,1.5) -- cycle;
    \draw (0,-2) -- (5,-2) -- (5,2) -- (0,2) -- cycle;
    \draw (0,0) -- (5,0);
  \end{scope}}

\newcommand{\MathMLBoxMetrics}[6]{
  \begin{scope}[shift={(#1,#2)},xscale=#3,yscale=#4,color=#5]
    \draw (0,0) node[below right]{Box #6};
    \draw[->] (0,-.5) -- (2,-.5) node[above]{inline size} -- (5,-.5);
    \draw[->] (4.7, 0) -- (4.7,-1) node[right]{ink line-ascent} -- (4.7,-1.5);
    \draw[->] (4.5, 0) -- (4.5, 1) node[right]{ink line-descent} -- (4.5,1.5);
    \draw[->] (3.7, 0) -- (3.7,-1.5) node[left]{line-ascent} -- (3.7,-2);
    \draw[->] (3.5, 0) -- (3.5,1.5) node[left]{line-descent} -- (3.5,2);
  \end{scope}}
